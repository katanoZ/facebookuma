<p><%= notice %></p>
<h1>Topic一覧</h1>
<% @topics.each do |topic| %>
  <%= link_to topic_path(topic) do %>
    <h4><strong><%= topic.title %></strong></h4>
  <% end %>
  <%= image_tag(topic.image, alt: topic.title) if topic.image.present? %>
  <p>内容：<%= topic.content %></p>
  <%= link_to "トピックを編集する", edit_topic_path(topic.id) %>
  <%= link_to "トピックを削除する", topic_path(topic.id), method: :delete, data: { confirm: "本当に削除してもいいですか？" } %>
<% end %>
<br>
<br>
<%= link_to "トピックを作成する", new_topic_path %>
