<% if notice %>
  <div class="alert alert-success alert-dismissible">
    <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p><%= notice %><%= alert %></p>
  </div>
<% end %>

<% @topics.reverse.each do |topic| %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title"><%= topic.title %></h2>
      <p class="text-right">
        投稿者:<%= topic.user.name %>  <%= topic.created_at %>
      </p>
    </div>
    <div class="panel-body padding10px">
      <div class="field text-center">
        <%= topic_img(topic) if topic_img(topic) %>
      </div>
    </div>
    <div class="panel-footer">
      <p>
        <%= profile_img(topic.user, :small) if profile_img(topic.user) %>&nbsp;&nbsp;
        <strong><%= topic.user.name %></strong>&nbsp;&nbsp;&nbsp;
        <span class="visible-xs"><br></span>
        <%= topic.content %>
      </p>
      <% if current_user == topic.user %>
        <div class="hidden-xs text-right">
          <%= link_to "投稿を編集する", edit_topic_path(topic.id), class: "btn btn-success" %>
          <%= link_to "投稿を削除する", topic_path(topic.id), method: :delete, data: { confirm: "本当に削除していいですか？" }, class: "btn btn-danger" %>
        </div>
        <div class="visible-xs">
          <%= link_to "投稿を編集する", edit_topic_path(topic.id), class: "btn btn-success btn-block" %>
          <div class="padding3px"></div>
          <%= link_to "投稿を削除する", topic_path(topic.id), method: :delete, data: { confirm: "本当に削除していいですか？" }, class: "btn  btn-danger btn-block" %>
        </div>
      <% end %>
    </div>
  </div>

<% end %>

<section>
  <div id="page-top-btn" class="page-top-btn">
      <p><a class="move-page-top" id="move-page-top">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;▲</a></p>
  </div>
</section>
