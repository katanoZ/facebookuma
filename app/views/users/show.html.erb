<div class="container">
  <h2>ユーザ詳細</h2>
    <br>
    <%= profile_img(@user, size: :small) %><br>
    <%= @user.name %><br>
    <%= @user.email %><br>
    <%= link_to "ユーザ一覧に戻る", users_path, class: "btn btn-default margin-top10" %><br>
    <br>
    <p class="h3">自己紹介</p>
    <% if @user.description.blank? %>
      <p class="text-muted">設定されていません。</p>
    <% else %>
      <p><%= @user.description %></p>
    <% end %>
    <hr>
    <%= render "followed_users", user:@user %><br>
    <hr>
    <%= render "followers", user:@user %><br>
</div>
