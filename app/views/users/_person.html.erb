<div class="container-child col-md-3 col-sm-4 col-xs-6 img-margin">
  <%= profile_img(user, size: :small) %><br>
  <%= user.name %><br>
  <%= user.email %><br>
  <%= link_to "ユーザ詳細", user_path(user), class: "btn btn-default margin-top10" %>
  <%= render "follow_form", user:user %>
  <% unless user.id == current_user.id %>
    <div class="item margin-top10">
      <%= link_to "メッセージ", conversations_path(sender_id: current_user.id, recipient_id: user.id), method: "post" %>
    </div>
  <% end %>
</div>
